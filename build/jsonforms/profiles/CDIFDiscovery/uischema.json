{
  "type": "Categorization",
  "elements": [
    {
      "type": "Category",
      "label": "Basic Info",
      "elements": [
        {
          "type": "Group",
          "label": "Basic Information",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:name",
              "label": "Dataset Name"
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:description",
              "label": "Description",
              "options": {
                "multi": true
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:identifier",
              "label": "Identifier (DOI)"
            },
            {
              "type": "Control",
              "scope": "#/properties/@type",
              "label": "Resource Type",
              "options": {
                "suggestion": [
                  "schema:Dataset",
                  "schema:CreativeWork",
                  "schema:SoftwareApplication",
                  "schema:SoftwareSourceCode",
                  "schema:Product",
                  "schema:WebAPI",
                  "schema:DigitalDocument",
                  "schema:Collection",
                  "schema:ImageObject",
                  "schema:DataCatalog",
                  "schema:DefinedTermSet"
                ]
              }
            },
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/schema:datePublished",
                  "label": "Date Published",
                  "options": {
                    "format": "date"
                  }
                },
                {
                  "type": "Control",
                  "scope": "#/properties/schema:dateModified",
                  "label": "Date Modified",
                  "options": {
                    "format": "date"
                  }
                }
              ]
            },
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/schema:version",
                  "label": "Version"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/schema:inLanguage",
                  "label": "Language"
                }
              ]
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:additionalType",
              "label": "Additional Types"
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:keywords",
              "label": "Keywords"
            }
          ]
        }
      ]
    },
    {
      "type": "Category",
      "label": "Attribution",
      "elements": [
        {
          "type": "Group",
          "label": "Creators",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:creator/properties/@list",
              "label": "Authors (ordered)",
              "options": {
                "showSortButtons": true,
                "elementLabelProp": "schema:name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "HorizontalLayout",
                      "elements": [
                        {
                          "type": "Control",
                          "scope": "#/properties/@type",
                          "label": "Type"
                        },
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:name",
                          "label": "Name"
                        }
                      ]
                    },
                    {
                      "type": "HorizontalLayout",
                      "elements": [
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:identifier",
                          "label": "ORCID / Identifier"
                        },
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:affiliation/properties/schema:name",
                          "label": "Affiliation"
                        }
                      ]
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:alternateName",
                      "label": "Alternate Name"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "type": "Group",
          "label": "Contributors",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:contributor",
              "label": "Contributors",
              "options": {
                "elementLabelProp": "schema:name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "HorizontalLayout",
                      "elements": [
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:name",
                          "label": "Name"
                        },
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:roleName",
                          "label": "Role"
                        }
                      ]
                    },
                    {
                      "type": "HorizontalLayout",
                      "elements": [
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:identifier",
                          "label": "ORCID / Identifier"
                        },
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:affiliation/properties/schema:name",
                          "label": "Affiliation"
                        }
                      ]
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "type": "Group",
          "label": "Publisher",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:publisher/properties/schema:name",
              "label": "Publisher Name"
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:publisher/properties/schema:identifier",
              "label": "Publisher Identifier"
            }
          ]
        },
        {
          "type": "Group",
          "label": "Provider",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:provider",
              "label": "Data Providers",
              "options": {
                "elementLabelProp": "schema:name",
                "detail": {
                  "type": "HorizontalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:name",
                      "label": "Name"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "type": "Group",
          "label": "Funding",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:funding",
              "label": "Grants",
              "options": {
                "elementLabelProp": "schema:name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:name",
                      "label": "Grant Name"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:description",
                      "label": "Description"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:funder/properties/schema:name",
                      "label": "Funding Agency"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:identifier",
                      "label": "Grant Identifier",
                      "options": {
                        "detail": {
                          "type": "VerticalLayout",
                          "elements": [
                            {
                              "type": "HorizontalLayout",
                              "elements": [
                                {
                                  "type": "Control",
                                  "scope": "#/properties/schema:propertyID",
                                  "label": "ID Type"
                                },
                                {
                                  "type": "Control",
                                  "scope": "#/properties/schema:value",
                                  "label": "ID Value"
                                }
                              ]
                            },
                            {
                              "type": "Control",
                              "scope": "#/properties/schema:url",
                              "label": "ID URL"
                            }
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Category",
      "label": "Access & Distribution",
      "elements": [
        {
          "type": "Group",
          "label": "Access",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:url",
              "label": "Landing Page URL"
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:license",
              "label": "License",
              "options": {
                "elementLabelProp": "schema:name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:name",
                      "label": "License Name"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:url",
                      "label": "License URL"
                    }
                  ]
                }
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:conditionsOfAccess",
              "label": "Conditions of Access",
              "options": {
                "elementLabelProp": "schema:name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:name",
                      "label": "Condition Name"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:description",
                      "label": "Description"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:url",
                      "label": "URL"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "type": "Group",
          "label": "Distribution",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:distribution",
              "label": "Distributions",
              "options": {
                "elementLabelProp": "schema:name"
              }
            }
          ]
        },
        {
          "type": "Group",
          "label": "Related Links & Policies",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:relatedLink",
              "label": "Related Links",
              "options": {
                "elementLabelProp": "schema:linkRelationship",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:linkRelationship",
                      "label": "Relationship"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/target/properties/schema:name",
                      "label": "Target Name"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/target/properties/schema:url",
                      "label": "Target URL"
                    }
                  ]
                }
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:publishingPrinciples",
              "label": "Publishing Principles"
            }
          ]
        }
      ]
    },
    {
      "type": "Category",
      "label": "Coverage & Quality",
      "elements": [
        {
          "type": "Group",
          "label": "Spatial Coverage",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:spatialCoverage",
              "label": "Spatial Coverage",
              "options": {
                "elementLabelProp": "schema:name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:name",
                      "label": "Place Name"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:geo/properties/schema:box",
                      "label": "Bounding Box (south west north east)"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "type": "Group",
          "label": "Temporal Coverage",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:temporalCoverage",
              "label": "Temporal Coverage"
            }
          ]
        },
        {
          "type": "Group",
          "label": "Variables Measured",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:variableMeasured",
              "label": "Variables",
              "options": {
                "elementLabelProp": "schema:name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "HorizontalLayout",
                      "elements": [
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:name",
                          "label": "Name"
                        },
                        {
                          "type": "Control",
                          "scope": "#/properties/schema:unitText",
                          "label": "Unit"
                        }
                      ]
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:description",
                      "label": "Description",
                      "options": {
                        "multi": true
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Category",
      "label": "Metadata Record",
      "elements": [
        {
          "type": "Group",
          "label": "Metadata Record",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/schema:subjectOf/properties/schema:maintainer",
              "label": "Metadata Maintainer",
              "options": {
                "detail": {
                  "type": "HorizontalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/@type",
                      "label": "Type"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/schema:name",
                      "label": "Name"
                    }
                  ]
                }
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:subjectOf/properties/schema:sdDatePublished",
              "label": "Metadata Date Published",
              "options": {
                "format": "date"
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/schema:subjectOf/properties/schema:includedInDataCatalog/properties/schema:name",
              "label": "Data Catalog"
            }
          ]
        }
      ]
    }
  ]
}
