{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "schema for cdif profile of schema.org/Person",
    "type": "object",
    "properties": {
        "@id": {"type": "string"},
        "@type": {
            "type": "string",
            "const": "schema:Person"
        },
        "schema:name": {
            "type": "string",
            "description": "string label for person that is meaningful for human users"
        },
        "schema:alternateName": {
            "type": "string",
            "description": "other labels by which the person might be known"
        },
        "schema:affiliation": {"$ref": "#/$defs/Organization"},
        "schema:contactPoint": {
            "description": "restrict to email only. Schema.org allows telephone and postal contacts as well",
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string",
                    "const": "schema:ContactPoint",
                    "default": "schema:ContactPoint"
                },
                "schema:email": {"type": "string"}
            }
        },
        "schema:description": {"type": "string"},
        "schema:identifier": {
            "description": "identifier for person, recommend ORCID",
            "$ref": "#/$defs/Identifier"
        },
        "schema:sameAs": {
            "type": "array",
            "description": "other identifiers for the person",
            "items": {"type": "string"}
        }
    },
    "$defs": {
        "Organization": {"$ref": "../organization/organizationSchema.json"},
        "Identifier": {"$ref": "../identifier/identifierSchema.json"}
    },
    "allOf": [
        {
            "required": ["@type"]
        },
        {
            "anyOf": [
                {
                    "required": ["schema:name"]
                },
                {
                    "required": ["schema:identifier"]
                }
            ]
        }
    ]
}