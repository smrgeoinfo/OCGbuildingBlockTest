@prefix rdf:         <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:        <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh:          <http://www.w3.org/ns/shacl#> .
@prefix xsd:         <http://www.w3.org/2001/XMLSchema#> .
@prefix schema:      <http://schema.org/> .
@prefix ada:         <https://ada.astromat.org/metadata/> .
@prefix cdifd: <https://cdif.org/validation/0.1/shacl#> .
@base <https://www.ogc.org/rules/template/> .

# TEM technique profile SHACL rules.
# Base product validation (creator, distribution, wasGeneratedBy, etc.)
# is inherited from adaProduct rules.shacl.
# This shape constrains schema:additionalType to valid TEM values.

cdifd:temProductShape
    a sh:NodeShape ;
    sh:target [
        a sh:SPARQLTarget ;
        sh:select """
            PREFIX schema: <http://schema.org/>
            SELECT ?this
            WHERE {
                ?this a schema:Dataset .
                ?this a schema:Product .
                MINUS {
                    ?parent a schema:Dataset .
                    ?parent ?p ?this .
                    FILTER (?parent != ?this)
                    FILTER (?p != schema:about)
                }
            }
        """ ;
    ] ;
    sh:property [
        sh:path schema:additionalType ;
        sh:minCount 1 ;
        sh:or (
        [sh:hasValue "Transmission Electron Microscopy (TEM) Image"]
        [sh:hasValue "Transmission Electron Microscopy (TEM) Patterns Image"]
        [sh:hasValue "Scanning Transmission Electron Microscopy (STEM) Image"]
        [sh:hasValue "Scanning Transmission Electron Microscopy Energy Dispersive X-ray Spectroscopy (STEMEDS) Cube"]
        [sh:hasValue "Scanning Transmission Electron Microscopy Energy Dispersive X-ray Spectroscopy (STEMEDS) Tabular"]
        [sh:hasValue "Scanning Transmission Electron Microscopy Energy Dispersive X-ray Spectroscopy (STEMEDS) Tomography"]
        [sh:hasValue "Scanning Transmission Electron Microscopy Electron Energy-loss Spectra (STEMEELS) Cube"]
        [sh:hasValue "Scanning Transmission Electron Microscopy Electron Energy-loss Spectra (STEMEELS) Tabular"]
        [sh:hasValue "Transmission Electron Microscopy"]
        ) ;
        sh:message "TEM products must have a schema:additionalType matching a valid TEM type." ;
    ] ;
    sh:message "TEM technique profile: additionalType must identify a valid TEM product type." ;
    .
