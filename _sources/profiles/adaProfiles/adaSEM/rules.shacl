@prefix rdf:         <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:        <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh:          <http://www.w3.org/ns/shacl#> .
@prefix xsd:         <http://www.w3.org/2001/XMLSchema#> .
@prefix schema:      <http://schema.org/> .
@prefix ada:         <https://ada.astromat.org/metadata/> .
@prefix cdifd: <https://cdif.org/validation/0.1/shacl#> .
@base <https://www.ogc.org/rules/template/> .

# SEM technique profile SHACL rules.
# Base product validation (creator, distribution, wasGeneratedBy, etc.)
# is inherited from adaProduct rules.shacl.
# This shape constrains schema:additionalType to valid SEM values.

cdifd:semProductShape
    a sh:NodeShape ;
    sh:target [
        a sh:SPARQLTarget ;
        sh:select """
            PREFIX schema: <http://schema.org/>
            SELECT ?this
            WHERE {
                ?this a schema:Dataset .
                ?this a schema:Product .
                MINUS {
                    ?parent a schema:Dataset .
                    ?parent ?p ?this .
                    FILTER (?parent != ?this)
                    FILTER (?p != schema:about)
                }
            }
        """ ;
    ] ;
    sh:property [
        sh:path schema:additionalType ;
        sh:minCount 1 ;
        sh:or (
        [sh:hasValue "Scanning Electron Microscopy (SEM) Image"]
        [sh:hasValue "Scanning Electron Microscopy Electron Backscatter Diffraction (SEMEBSD) Grain Image"]
        [sh:hasValue "Scanning Electron Microscopy Energy Dispersive X-ray Spectroscopy (SEMEDS) image"]
        [sh:hasValue "Scanning Electron Microscopy Energy Dispersive X-ray Spectroscopy (SEMEDS) Point Data"]
        [sh:hasValue "Scanning Electron Microscopy High Resolution Cathodoluminescence (SEMHRCL) image"]
        [sh:hasValue "Scanning electron microscopy"]
        ) ;
        sh:message "SEM products must have a schema:additionalType matching a valid SEM type." ;
    ] ;
    sh:message "SEM technique profile: additionalType must identify a valid SEM product type." ;
    .
