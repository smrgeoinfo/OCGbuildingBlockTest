{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "definitions for roles used in XAS profile",
    "anyOf": [
        {
            "type": "object",
            "title": "Facility",
            "description": "specifies an organization at which the XAS analysis was conducted. ",
            "properties": {
                "@type": {
                    "type": "string",
                    "const": "schema:Role"
                },
                "schema:roleName": {
                    "type": "object",
                    "properties": {
                        "@type": {
                            "type": "string",
                            "const": "schema:DefinedTerm"
                        },
                        "schema:name": {
                            "type": "string",
                            "const": "Facility"
                        },
                        "schema:identifier": {
                            "type": "object",
                            "properties": {
                                "@type": {
                                    "type": "string",
                                    "const": "schema:PropertyValue"
                                },
                                "schema:url": {
                                    "type": "string",
                                    "const": "http://ncicb.nci.nih.gov/xml/owl/EVS/Thesaurus.owl#C62574"
                                },
                                "schema:inDefinedTermSet": {
                                    "type": "string",
                                    "const": "https://ncithesaurus.nci.nih.gov/ncitbrowser"
                                }
                            }
                        }
                    }
                },
                "schema:contributor": {"$ref": "#/$defs/Organization"}
            },
            "required": [
                "schema:roleName",
                "schema:contributor"
            ]
        }
    ],
    "$defs": {
        "Person": {"$ref": "../properties/person/personSchema.json"},
        "Organization": {"$ref": "../properties/organization/organizationSchema.json"},
        "DefinedTerm": {"$ref": "../properties/definedTerm/definedTermSchema.json"}
    }
}